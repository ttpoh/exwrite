<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:background="@drawable/border_meal"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_gravity="end"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="130dp"
            android:layout_gravity="end"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/meal_img"
                android:layout_marginTop="15dp"
                android:layout_margin="15dp"
                android:layout_width="140dp"
                android:layout_height="100dp"
                android:layout_marginLeft="20dp"
                app:srcCompat="@drawable/noimg"
                android:scaleType="fitXY"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="80dp"
            android:layout_height="130dp"
            android:layout_gravity="end"
            android:orientation="vertical">
        <TextView
            android:id="@+id/mealName"
            android:text="음식 이름"
            android:layout_marginTop="10dp"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/mealTime"
                android:text="먹은 시간"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/mealAmount"
                android:text="먹은 양"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/mealMemo"
                android:text="내용"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_gravity="end"
            android:orientation="vertical">
            <TextView
                android:id="@+id/meal_name"
                android:layout_marginTop="10dp"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/meal_time"
                android:text="먹은 시간"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/meal_amount"
                android:text="먹은 양"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/meal_memo"
                android:text="내용"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
